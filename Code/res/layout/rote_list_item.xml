<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_destiny_rote_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Destino vai aqui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_origim_rote_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Rua cervinho, 191 - SÃ£o Paulo - Sem estdo nem sei mais" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="pessoas"
            android:src="@drawable/icon_passageiros" />

        <TextView
            android:id="@+id/txt_spaces_rote_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 / 4"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="seta"
        android:src="@drawable/icon_navigation" />

</LinearLayout>